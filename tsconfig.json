{
  "include": [ "src/**/*", "tests/**/*" ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "inlineSources": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "paths": {
      "src": ["src/*", "tests/*"]
    }
  },
}
